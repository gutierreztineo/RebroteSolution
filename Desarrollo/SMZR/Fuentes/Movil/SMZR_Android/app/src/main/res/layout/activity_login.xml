<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="loginViewModel"
            type="com.rebrotesolution.smzr_android.viewModels.login.LoginViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background"
        tools:context=".activities.MainActivity">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/login_logo"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/logof" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/subtitle_logo"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:paddingBottom="30dp"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/username_text"
                    android:drawableStart="@drawable/ic_user"
                    android:hint="@string/placeholder_btn_user"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edit_background"
                    android:padding="15dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPlaceholder"
                    app:addTextChangedListener="@{loginViewModel.usernameTextWatcher}" />

                <EditText
                    android:id="@+id/password_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/login_edit_background"
                    android:drawableStart="@drawable/ic_password"
                    android:drawablePadding="10dp"
                    android:hint="@string/contrasena"
                    android:inputType="textPassword"
                    android:padding="15dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPlaceholder"
                    app:addTextChangedListener="@{loginViewModel.passwordTextWatcher}" />

                <TextView
                    android:id="@+id/forgot_password_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="10dp"
                    android:text="@string/forgotPassword"
                    android:textColor="@color/colorIndicatorSelected"
                    android:textColorHint="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/login_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@color/colorButton"
                    android:onClick="@{loginViewModel::onLoginClicked}"
                    android:padding="10dp"
                    android:text="@string/iniciar_sesion"
                    android:textAllCaps="false"
                    android:textColor="@color/colorTextInput"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/register_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@color/colorButtonBig"
                    android:onClick="@{loginViewModel::onRegisterClicked}"
                    android:padding="10dp"
                    android:text="@string/registrate"
                    android:textAllCaps="false"
                    android:textColor="@color/colorTextInput"
                    android:textSize="20sp" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/imagen_sintoma_categoria"
            android:layout_width="70dp"
            android:layout_height="70dp"
            />
        <TextView
            android:id="@+id/text_fecha_registro_historial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de registro"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/imagen_sintoma_categoria"
            android:layout_toEndOf="@id/imagen_sintoma_categoria"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/text_malestar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Malestar"
            android:layout_below="@id/text_fecha_registro_historial"
            android:layout_toEndOf="@id/imagen_sintoma_categoria"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>